{
  "name": "wiof-frontend-modern",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
  "test": "ng test",
  "check-deploy": "node scripts/check-deploy.js",
  "lint": "eslint \"src/**/*.{ts,html}\" --ext .ts,.html",
  "lint:fix": "eslint \"src/**/*.{ts,html}\" --ext .ts,.html --fix",
    "firebase:deploy": "npm run check-deploy && firebase deploy",
    "firebase:deploy:rules": "npm run check-deploy && firebase deploy --only firestore:rules,storage",
    "firebase:deploy:indexes": "npm run check-deploy && firebase deploy --only firestore:indexes",
    "firebase:deploy:hosting": "npm run check-deploy && firebase deploy --only hosting"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.2.3",
    "@angular/cdk": "^20.2.1",
    "@angular/common": "^20.2.3",
    "@angular/compiler": "^20.2.0",
    "@angular/core": "^20.2.0",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^20.2.3",
    "@angular/material": "^20.2.1",
    "@angular/platform-browser": "^20.2.0",
    "@angular/router": "^20.2.0",
    "firebase": "^12.5.0",
    "lucide-angular": "^0.542.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.1",
    "@angular/cli": "^20.2.1",
    "@angular/compiler-cli": "^20.2.0",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.2",
    "eslint": "^8.49.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@angular-eslint/eslint-plugin": "^15.0.0",
    "@angular-eslint/eslint-plugin-template": "^15.0.0",
    "@angular-eslint/template-parser": "^15.0.0",
    "eslint-config-prettier": "^9.0.0"
  }
}
